<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="Get Started">

        <Preference
            app:icon="@drawable/ic_one"
            app:title="Add a new PicIt Widget to your Home Screen." />

        <Preference
            app:icon="@drawable/ic_two"
            app:title="Tap on the Widget to start the Content Chooser Dialog." />

        <Preference
            app:icon="@drawable/ic_three"
            app:title="Select content to be shown in the Widget from the Dialog." />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="Change Content">

        <Preference
            app:icon="@drawable/ic_one"
            app:title="Tap on the Widget to be changed and start the Content Chooser Dialog." />

        <Preference
            app:icon="@drawable/ic_two"
            app:title="Select content to be shown in the Widget from the Chooser Dialog." />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
